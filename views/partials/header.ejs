<header class="yt-header">
  <div class="yt-header-left">
    <a href="/" class="yt-logo">
      <img src="/images/youtube-logo.png" alt="Logo" />
      <span>DemoTube</span>
    </a>
  </div>
  <div class="yt-header-center">
    <form class="yt-search-form" action="/search" method="get">
      <input type="text" name="q" placeholder="搜索" class="yt-search-input" />
      <button type="submit" class="yt-search-btn">
        <i class="fas fa-search"></i>
      </button>
    </form>
  </div>
  <div class="yt-header-right">
    <a href="/upload" class="yt-header-icon" title="上传"
      ><i class="fas fa-video"></i
    ></a>
    <a href="/notifications" class="yt-header-icon" title="通知"
      ><i class="fas fa-bell"></i
    ></a>
    <a href="/user" class="yt-avatar">
      <img src="/images/avatar.png" alt="用户头像" />
    </a>
  </div>
</header>
